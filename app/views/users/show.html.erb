<div class="container userss">
  <% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
        <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
          <%= user.username %>
          <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
     <% @user.foods.each do |food| %>
     <br><%= link_to food.name, food_path(food) %><br>
     <%= image_tag food.file %><br>
     <% if @user == current_user %>
     <%= link_to "Edit", edit_food_path(food) %>
     <%= link_to "Delete", food_path(food),
     method: :delete, data: { confirm: "Are you sure?" } %>
     <% else %>
     <%= link_to "View", food_path(food) %>
     <% end %>
     <% end %>
   </div>
 </div>

</div>