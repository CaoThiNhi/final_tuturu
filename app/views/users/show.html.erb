<div class="col-xs-12 text-center">
  <br><br><br>
  <% if @user.avatar.present? %>
  <%= image_tag @user.avatar, class:"img2" %>
  <% end %>
  <p style="color: white"><%= @user.username %></p>
  <p style="color: white"><%= @user.name %></p>
  <p style="color: white"><%= @user.birth %></p>
  <p style="color: white">
    <% if @user.gender %>Female
    <% else %>Male
    <% end %>
  </p>
  <h2> <%= @user.username %>'s photo </h2>
  <% @user.foods.each do |food| %>
    <br><%= link_to food.name, food_path(food) %><br>
    <%= image_tag food.file %><br>
    <% if @user == current_user %>
      <%= link_to "Edit", edit_food_path(food) %>
      <%= link_to "Delete", food_path(food),
        method: :delete, data: { confirm: "Are you sure?" } %>
    <% else %>
      <%= link_to "View", food_path(food) %>
    <% end %>
  <% end %>
  <br><br>
</div>
<style>
  body {
    background: #36465D;
    color: white;
    font-size: 18px;
  }
  img {
    height: auto;
    width: 500px
  }
  .img2 {
    width: 200px;
    height: 200px;
  }
  a {
    color: yellow;
  }
</style>
